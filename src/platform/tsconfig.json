{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "baseUrl": "./",
        "lib": [
            "dom",
            "es2017"
        ],
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "paths": {
            "~/*": ["src/*"],
        }
    },
    "include": [
        "./"
    ],
    "exclude": [
        "node_modules", 
        "**.tests.ts",
        "jest.config.js"
    ]
}
