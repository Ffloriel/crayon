{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "lib": [
            "dom",
            "es2017"
        ],
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "paths": {
            "~/*": ["src/*"],
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
